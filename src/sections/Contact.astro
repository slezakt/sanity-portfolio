---
import { getContact } from '../lib/sanityClient';

const contact = await getContact();
---

<section>
  <h2>Kontakt</h2>
  <div>
    <h3>Adresa</h3>
    <address>
      {contact.name}<br />
      {contact.street}<br />
      {contact.city}<br />
      {contact.state}
    </address>
  </div>
  <div>
    <div>
      <h3>Telefon</h3>
      {contact.phone}
    </div>
    <div>
      <h3>E-mail</h3>
      {contact.email}
    </div>
  </div>
</section>
